html
	head
		title Ingresar
		link(rel="stylesheet" href="/css/bootstrap.min.css")
		link(rel="stylesheet" href="/css2/Login.css")
		script(src="/js/jquery.min.js")
		script(src="/js/bootstrap.min.js")
		meta(name="viewport" content="width=device-width, initial-scale=1")

	body
		div(class="container")
			div(class="text-center")
				div(class="Cuerpo")
					div(class="v-m")
							h1 Registrate!
							div(class="container")
								form(action="/Registro" method="POST")
									div(class="Salto")
									div(class="text-left")
										div(class="form-group")
											label(for="NombreUsuario") Nombre de Usuario:
											input(type="text", name="user", class="form-control", placeholder="Nombre", id="user")
									div(class="text-left")
										div(class="form-group")
											label(for="Correo") Correo Electronico:
											input(type="password", name="email",class="form-control", placeholder="Correo", id="email")
									div(class="text-left")
										div(class="form-group")
											label(for="Contraseña") Contraseña:
											input(type="password", name="pass",class="form-control", placeholder="Contraseña", id="pass")
									div(class="text-left")
										div(class="form-group")
											label(for="RepiteContraseña") Repite tu Contraseña:
											input(type="password", name="pass2",class="form-control", placeholder="Contraseña", id="pass2")
									input(type="submit", name="registro",class="LlenarHorizontalmente",style="background-color:68B8AA;font-size:20;", class="btn", value="Registrar")